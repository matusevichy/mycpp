<Window x:Class="militreg_lite.UI.AuthForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:militreg_lite.UI"
        mc:Ignorable="d"
        Title="AuthForm" Height="194" Width="260" KeyDown="Window_KeyDown" SizeToContent="WidthAndHeight">
    <StackPanel>
        <Label Content="Login"></Label>
        <TextBox x:Name="tbLogin" Height="30" Width="200"></TextBox>
        <Label Content="Password"></Label>
        <PasswordBox x:Name="tbPassword" Height="30" Width="200" PasswordChar="*"></PasswordBox>
        <CheckBox Content="Запам'ятати пароль" x:Name="cbRememberPass"/>
        <DockPanel Margin="0,20,0,0" VerticalAlignment="Stretch" LastChildFill="False" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <Button x:Name="btnCancel" Content="Cancel" Width="100" ScrollViewer.VerticalScrollBarVisibility="Disabled" Click="btnCancel_Click"></Button>
            <Button x:Name="btnOk" Content="Ok" Width="100" DockPanel.Dock="Right" Click="btnOk_Click" />
        </DockPanel>
    </StackPanel>
</Window>
