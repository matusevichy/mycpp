<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:background="@color/black"
    android:padding="@dimen/padding_10">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:ems="10"
        android:textSize="@dimen/et_text"
        android:textColor="@color/white"

        android:layout_columnSpan="4"
        android:textDirection="rtl"
        android:layout_gravity="fill_horizontal"/>

    <Button
        android:id="@+id/button_C"
        style="@style/White_Button"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:text="@string/button_C" />
    <Button
        android:id="@+id/button_minus"
        style="@style/White_Button"
        android:layout_row="1"
        android:layout_column="1"
        android:text="@string/button_minus"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_percent"
        style="@style/White_Button"
        android:layout_row="1"
        android:layout_column="2"
        android:text="@string/button_percent"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_div"
        style="@style/Red_Button"
        android:layout_row="1"
        android:layout_column="3"
        android:text="@string/button_div"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>

    <Button
        android:id="@+id/button_7"
        style="@style/White_Button"
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/button_7"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_8"
        style="@style/White_Button"
        android:layout_row="2"
        android:layout_column="1"
        android:text="@string/button_8"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_9"
        style="@style/White_Button"
        android:layout_row="2"
        android:layout_column="2"
        android:text="@string/button_9"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_mult"
        style="@style/Red_Button"
        android:layout_row="2"
        android:layout_column="3"
        android:text="@string/button_mult"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>

    <Button
        android:id="@+id/button_4"
        style="@style/White_Button"
        android:layout_row="3"
        android:layout_column="0"
        android:text="@string/button_4"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_5"
        style="@style/White_Button"
        android:layout_row="3"
        android:layout_column="1"
        android:text="@string/button_5"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_6"
        style="@style/White_Button"
        android:layout_row="3"
        android:layout_column="2"
        android:text="@string/button_6"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_diff"
        style="@style/Red_Button"
        android:layout_row="3"
        android:layout_column="3"
        android:text="@string/button_diff"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>

    <Button
        android:id="@+id/button_1"
        style="@style/White_Button"
        android:layout_row="4"
        android:layout_column="0"
        android:text="@string/button_1"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_2"
        style="@style/White_Button"
        android:layout_row="4"
        android:layout_column="1"
        android:text="@string/button_2"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_3"
        style="@style/White_Button"
        android:layout_row="4"
        android:layout_column="2"
        android:text="@string/button_3"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_summ"
        style="@style/Red_Button"
        android:layout_row="4"
        android:layout_column="3"
        android:text="@string/button_summ"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>

    <Button
        android:id="@+id/button_0"
        style="@style/White_Button"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="@string/button_0"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_dot"
        style="@style/White_Button"
        android:layout_row="5"
        android:layout_column="2"
        android:text="@string/button_dot"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <Button
        android:id="@+id/button_eq"
        style="@style/Red_Button"
        android:layout_row="5"
        android:layout_column="3"
        android:text="@string/button_eq"
        android:layout_gravity="fill_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>

</GridLayout>